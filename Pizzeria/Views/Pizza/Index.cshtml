@{
}

@model IEnumerable<Pizza>

 <div class="row">
        @{
            foreach (var pizza in Model)
            {
                <div class="col-sm-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@Url.Content("~/images/"+@pizza.ImageScr.Trim())" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@pizza.Name</h5>
                        <p class="card-text"><b>Price: @pizza.Price PLN</b></p>
                        <a href="#" class="btn btn-danger buttonToAdd">Add</a>
                    </div>
                </div>
                </div>
            }
        }
 </div>